<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:background="@color/white"
    >



    <TextView
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fees"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_20ssp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20ssp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/full_fees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Fee"
        android:inputType="number"
        android:paddingLeft="@dimen/_10sdp"
        android:text=""
        android:focusable="false"
        android:editable="false"
        android:backgroundTint="@color/mainColor"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/pay_fees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pay Fee"
        android:inputType="number"
        android:paddingLeft="@dimen/_10sdp"
        android:text=""
        android:focusable="false"
        android:editable="false"
        android:backgroundTint="@color/mainColor"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/pending_fees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pending Fee"
        android:inputType="number"
        android:paddingLeft="@dimen/_10sdp"
        android:text=""
        android:focusable="false"
        android:editable="false"
        android:backgroundTint="@color/mainColor"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />



    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/reg_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Joining Date"
        android:inputType="number"
        android:paddingLeft="@dimen/_10sdp"
        android:text=""
        android:focusable="false"
        android:editable="false"
        android:backgroundTint="@color/mainColor"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />





    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/pay_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fees Pay Date"
        android:inputType="number"
        android:paddingLeft="@dimen/_10sdp"
        android:text=""
        android:focusable="false"
        android:editable="false"
        android:backgroundTint="@color/mainColor"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="?colorAccent"
        app:met_singleLineEllipsis="true" />







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pay"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:background="@color/colorAccent"

            />

        <Button
            android:id="@+id/btn_cencel"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:background="@color/colorAccent"

            />



    </LinearLayout>




</LinearLayout>